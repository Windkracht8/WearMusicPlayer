<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="wmp_splash" parent="Theme.SplashScreen.IconBackground">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen</item>
        <item name="postSplashScreenTheme">@style/wmp</item>
    </style>
    <style name="wmp" parent="Theme.Material3.Dark">
        <!-- this is set to false so that we can handle back swipes -->
        <item name="android:windowSwipeToDismiss" tools:ignore="WearBackNavigation">false</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="android:colorAccent">@color/w8blue</item>
        <item name="android:colorControlActivated">@color/w8blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
    </style>
    <style name="wmp_alert">
        <item name="android:gravity">center</item>
        <item name="android:background">@color/black</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
</resources>